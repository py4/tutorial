<div class="management with-font text-center" id="new">
	مدیریت صفحات موضوع:  <%= @tutorial.title %>
</div>

<% if @pages.any? %>
<div class="with-margin row">
	<div class="col-md-6 col-md-offset-3">
		<table class="table table-stripped">
			<thead>
				<tr>
					<th> نام صفحه </th>
					<th> ساخته شده در </th>
					<th> </th>
					<th> </th>
					<th> </th>
				</tr>
			</thead>
			<tbody>
				<% @pages.each_with_index do |page,index| %>
				<tr>
					<td> صفحه‌ی شماره‌ی <%= persian_number(index + 1) %> </td>
					<td> <%= persian_date(page.created_at) %> </td>
					<td> نمایش </td>
					<td> ویرایش </td>
					<td> حذف </td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% end %>

<div class="row with-font text-center">
	صفحه‌ی جدید می‌خواهید؟ <%= link_to 'بسازید', new_admin_subject_page_path(@tutorial), class: "btn btn-success" %>
</div>