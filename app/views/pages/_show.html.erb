<% index = tutorial.pages.index(page) %>
<div class="row management with-font text-center" id="new">
	<%= tutorial.title %> - صفحه‌ی شماره‌ی <%= persian_number(index+1) %>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3 with-margin content">
		<%= page.content.html_safe %>  
	</div>
</div>

<div class="row with-font text-center with-margin">
		<% if index < tutorial.pages.size-1 %>
			<%= link_to 'بعد', subject_page_path(tutorial, tutorial.pages.order(:created_at)[index+1]) , class: 'btn btn-default'%>
		<% end %>

		<% if index > 0 %>
			<%= link_to 'قبل', subject_page_path(tutorial, tutorial.pages.order(:created_at)[index-1]) , class: 'btn btn-default'%>
		<% end %>
</div>
