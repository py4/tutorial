<body id="registration">
	<div class="container">
		<div class="row centered-form">
			<div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"> در سیستم ما عضو شوید <small>رایگان است!</small></h3>
					</div>
					<div class="panel-body">
						<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {id: 'signupform', class: 'form-horizontal', role: 'form'}) do |f| %>
						<% if resource.errors.any? %>
						<div id="error_explanation">
							<ul>
								<% resource.errors.full_messages.each do |msg| %>
								<% #Should have been: @location.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>
								</li>
								<% end %>
							</ul>
						</div>
						<% end %>

						<div class="row">
							<div class="col-xs-1 col-sm-1 col-md-1">
							</div>
							<div class="col-xs-4 col-sm-4 col-md-4">
								<div class="form-group">
									<%= f.input :firstname , placeholder: 'نام', :autofocus => true, input_html: {class: 'form-control input-sm'} , label: false%>
								</div>
							</div>
							<div class="col-xs-1 col-sm-1 col-md-1">
							</div>
							<div class="col-xs-5 col-sm-5 col-md-5">
								<div class="form-group">
									<%= f.input :surname, placeholder: 'نام خانوداگی', input_html: {class: 'form-control input-sm'} , label: false%>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-xs-4 col-sm-4 col-md-4">
							</div>
							<div class="col-xs-4 col-sm-4 col-md-4">
								<div class="form-group">
									<%= f.input :username , placeholder: 'نام کاربری', :autofocus => true, input_html: {class: 'form-control input-sm'} , label: false, error: false%>
								</div>
							</div>
							<div class="col-xs-4 col-sm-4 col-md-4">
							</div>
						</div>

						<div class="row form-group">
							<div class="col-xs-1 col-sm-1 col-md-1">
							</div>
							<div class="col-xs-10 col-sm-10 col-md-10">
								<%= f.input :email , placeholder: 'پست الکترونیکی', input_html: {class: 'form-control input-sm'} , label: false, error: false%>
							</div>
							<div class="col-xs-1 col-sm-1 col-md-1">
							</div>
						</div>

						<div class="row">
							<div class="col-xs-6 col-sm-6 col-md-6">
								<div class="form-group">
									<%= f.input :password , placeholder: 'رمز عبور', input_html: {class: 'form-control input-sm'} , label: false, error: false%>
								</div>
							</div>
							<div class="col-xs-6 col-sm-6 col-md-6">
								<div class="form-group">
									<%= f.input :password_confirmation , placeholder: 'تکرار رمز عبور', input_html: {class: 'form-control input-sm'} , label: false, error: false%>
								</div>
							</div>
						</div>

						<input type="submit" value="عضویت" class="btn btn-info btn-block">

						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>