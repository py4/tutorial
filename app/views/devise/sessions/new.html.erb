<body id="registration">
	<div class="container">
		<div class="row centered-form">
			<div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"> وارد شوید! </h3>
					</div>
					<div class="panel-body">
						<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'loginform', class: 'form-horizontal', role: 'form'}) do |f| %>
						<div id="signupalert" style="display:none" class="alert alert-danger">
							<p>Error:</p>
							<span>
								<%= f.error_notification %>
							</span>
						</div>

						<div class="form-group">
							<div class="col-xs-1 col-sm-1 col-md-1"></div>
							<div class="col-xs-10 col-sm-10 col-md-10">
								<%= f.input :email , placeholder: 'پست الکترونیکی', input_html: {class: 'form-control input-sm'} , label: false, :autofocus => true%>
							</div>
						</div>
						<div class="form-group">
							<div class="col-xs-1 col-sm-1 col-md-1"></div>
							<div class="col-xs-10 col-sm-10 col-md-10">
								<%= f.input :password , placeholder: 'رمز عبور', input_html: {class: 'form-control input-sm'} , label: false%>
							</div>
						</div>


						<input type="submit" value="ورود" class="btn btn-info btn-block">
						<br>
						<a href="/users/sign_up">ثبت‌نام</a>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>